<% include ./partials/header %>
    
    <div class="ui container">
        <div class="ui two column grid">
            <div class="column">
                <div class="ui card">
                  <div class="image">
                    <img src="<%=user.avatar %>">
                  </div>
                  <div class="content">
                    <div class="center">
                      <form action="/users/<%=user.id %>/friends", method="POST"> 
                        <button class="ui primary button" type="submit">Add Friend</button>
                      </form>
                    </div>
                    <a class="header"><%=user.username%></a>
                    <div class="description">
                      Just Joined.
                    </div>
                  </div>
                  <div class="extra content">
                    <a>
                      <i class="users icon"></i>
                       <%=user.friends.length %> Friends
                    </a>
                  </div>
                </div>
            </div>
            <div class="column">
                
                <div class="ui four huge statistics">
                  <div class="blue statistic">
                    <div class="value">
                      <%=user.posts.length %>
                    </div>
                    <div class="label">
                      <i class="list alternate outline icon"></i> Posts
                    </div>
                  </div>
                  <div class="blue statistic">
                    <div class="value">
                      0
                    </div>
                    <div class="label">
                      <i class="thumbs up icon"></i> Votes
                    </div>
                  </div>
                  <div class="blue statistic">
                    <div class="value">
                      <%=user.friends.length %>
                    </div>
                    <div class="label">
                      <i class="users icon"></i> Friends
                    </div>
                  </div>
                </div>
                <div class="ui inverted section divider"></div>
                <h3>Posts by
                  <% if(currentUser._id==user.id){ %>
                     You
                  <% } else { %>
                    <%= user.username %>
                  <% } %>
                </h3>
                <div class="ui list">
                  <% user.posts.forEach(function(post){ %>
                    <div class="item">
                      <div class="header"><%=post.title %></div>
                      <a href="/posts/<%=post._id%>"><%= post.body.substring(0, 50) %>....</a>
                    </div>
                  <% }) %>
                </div>
                
            </div>
        </div>
    </div>
    
        
        


<% include ./partials/footer %>